{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "camelcase": 0,
    "no-multi-spaces": 0,
    "no-new": 2,
    "no-underscore-dangle": 0,
    "quotes": [2, "single", "avoid-escape"],
    "space-after-keywords": [2, "always"],
    "strict": [2, "never"],
    "no-unused-vars": [2, { "vars": "all", "args": "none" }]
  }
}
